{# AI Industry Insights Report #}
<div class="ai-industry-insights-report">

  {% if report.industry_overview %}
    <section class="report-section overview">
      <h2>{{ 'Industry Overview'|t }}</h2>
      <p class="report-intro">{{ report.industry_overview.current_state }}</p>
      <p><strong>{{ 'Transformation Pace:'|t }}</strong> {{ report.industry_overview.transformation_pace|capitalize }}</p>

      <div class="report-lists key-drivers-list">
        <div class="report-list"><h3>{{ 'Key Drivers'|t }}</h3>
        <ul>
          {% for driver in report.industry_overview.key_drivers %}
            <li>{{ driver }}</li>
          {% endfor %}
        </ul>
        </div>
      </div>
    </section>
  {% endif %}

  {% if report.role_evolution %}
    <section class="report-section role-evolution">
      <h2>{{ 'How Your Role is Evolving'|t }}</h2>
      <p class="report-intro">{{ report.role_evolution.how_changing }}</p>

      <div class="report-lists role-evolution-list">
        <div class="report-list"><h3>{{ 'Being Automated'|t }}</h3>
        <ul>
          {% for task in report.role_evolution.tasks_being_automated %}
            <li>{{ task }}</li>
          {% endfor %}
        </ul>
        </div>
        <div class="report-list"><h3>{{ 'New Responsibilities'|t }}</h3>
        <ul>
          {% for responsibility in report.role_evolution.new_responsibilities %}
            <li>{{ responsibility }}</li>
          {% endfor %}
        </ul>
        </div>
      </div>
      <p><strong>{{ 'Timeline:'|t }}</strong> {{ report.role_evolution.timeline }}</p>
    </section>
  {% endif %}

  {% if report.competitive_positioning %}
    <section class="report-section competitive">
      <h2>{{ 'Competitive Positioning'|t }}</h2>
      <div><strong>{{ 'Differentiators:'|t }}</strong> {{ report.competitive_positioning.differentiators|join(', ') }}</div>
      <div><strong>{{ 'In-Demand Skills:'|t }}</strong> {{ report.competitive_positioning.in_demand_skills|join(', ') }}</div>
      <div><strong>{{ 'Red Flags:'|t }}</strong> {{ report.competitive_positioning.red_flags|join(', ') }}</div>
    </section>
  {% endif %}

  {% if report.emerging_trends %}
    <section class="report-section trends">
      <h2>{{ 'Emerging Trends'|t }}</h2>
      <div><strong>{{ 'Technologies:'|t }}</strong> {{ report.emerging_trends.technologies|join(', ') }}</div>
      <div><strong>{{ 'Methodologies:'|t }}</strong> {{ report.emerging_trends.methodologies|join(', ') }}</div>
      <p><strong>{{ 'Timeline:'|t }}</strong> {{ report.emerging_trends.impact_timeline }}</p>
    </section>
  {% endif %}

  {% if report.strategic_recommendations %}
    <section class="report-section recommendations">
      <h2>{{ 'Strategic Recommendations'|t }}</h2>
      <div class="immediate"><h4>{{ 'Immediate Actions'|t }}</h4><ul>{% for action in report.strategic_recommendations.immediate_actions %}<li>{{ action }}</li>{% endfor %}</ul></div>
      <div class="six-month"><h4>{{ '6-Month Focus'|t }}</h4><p>{{ report.strategic_recommendations.six_month_focus }}</p></div>
      <div class="long-term"><h4>{{ 'Long-Term Positioning'|t }}</h4><p>{{ report.strategic_recommendations.long_term_positioning }}</p></div>
    </section>
  {% endif %}

  <div class="report-actions">
    <form method="post" action="/analysis/industry-insights/regenerate"><button type="submit" class="button button--secondary">{{ 'Regenerate'|t }}</button></form>
    <a href="/dashboard" class="button">{{ 'Dashboard'|t }}</a>
  </div>
</div>
