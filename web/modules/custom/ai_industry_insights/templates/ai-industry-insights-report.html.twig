{# AI Industry Insights Report #}
<div
	class="ai-industry-insights-report">

	{# Pending state - shown while report is being generated #}
	{% if report.status == 'pending' %}
		{% include '@ai_report_storage/report-pending.html.twig' with {
			'report': report,
			'report_title': 'Generating Your Industry Insights'|t
		} %}
	{% else %}


		{% if report.industry_overview %}
			<section class="report-section overview">
				<h2>{{ 'Industry Overview'|t }}</h2>
				<p class="report-intro">{{ report.industry_overview.current_state }}</p>

				<div class="report-columns key-drivers-list">
					<div class="report-column transformation-pace">
						<h3>{{ 'Transformation Pace'|t }}</h3>
						<div class="transformation-pace-gauge">
							<div class="speedometer">
								<div class="speedometer-arc"></div>
								<div class="speedometer-segments">
									<div class="speedometer-segment slow"></div>
									<div class="speedometer-segment moderate"></div>
									<div class="speedometer-segment rapid"></div>
								</div>
								<div class="speedometer-needle {{ report.industry_overview.transformation_pace }}"></div>
							</div>
							<div class="speedometer-label {{ report.industry_overview.transformation_pace }}">
								{{ report.industry_overview.transformation_pace|capitalize }}
							</div>
						</div>
					</div>
					<div class="report-list">
						<h3>{{ 'Key Drivers'|t }}</h3>
						<ul>
							{% for driver in report.industry_overview.key_drivers %}
								<li>{{ driver }}</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</section>
		{% endif %}

		{% if report.role_evolution %}
			<section class="report-section role-evolution">
				<h2>{{ 'How Your Role is Evolving'|t }}</h2>
				<p class="report-intro">{{ report.role_evolution.how_changing }}</p>

				<div class="report-lists role-evolution-list">
					<div class="report-list">
						<h3>{{ 'Being Automated'|t }}</h3>
						<ul>
							{% for task in report.role_evolution.tasks_being_automated %}
								<li>{{ task }}</li>
							{% endfor %}
						</ul>
					</div>
					<div class="report-list">
						<h3>{{ 'New Responsibilities'|t }}</h3>
						<ul>
							{% for responsibility in report.role_evolution.new_responsibilities %}
								<li>{{ responsibility }}</li>
							{% endfor %}
						</ul>
					</div>
				</div>
				<div class="report-column">
					<h3>{{ 'Timeline'|t }}</h3>
					<p>{{ report.role_evolution.timeline }}</p>
				</div>
			</section>
		{% endif %}

		{% if report.competitive_positioning %}
			<section class="report-section competitive">
				<h2>{{ 'Competitive Positioning'|t }}</h2>
				<div class="report-lists columns-narrow competitive-positioning-list">
					<div class="report-list">
						<h3>{{ 'Differentiators'|t }}</h3>
						<ul>
							{% for differentiator in report.competitive_positioning.differentiators %}
								<li>{{ differentiator }}</li>
							{% endfor %}
						</ul>
					</div>
					<div class="report-list">
						<h3>{{ 'In-Demand Skills'|t }}</h3>
						<ul>
							{% for in_demand_skill in report.competitive_positioning.in_demand_skills %}
								<li>{{ in_demand_skill }}</li>
							{% endfor %}
						</ul>
					</div>
					<div class="report-list">
						<h3>{{ 'Red Flags'|t }}</h3>
						<ul>
							{% for red_flag in report.competitive_positioning.red_flags %}
								<li>{{ red_flag }}</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</section>
		{% endif %}

		{% if report.emerging_trends %}
			<section class="report-section trends">
				<h2>{{ 'Emerging Trends'|t }}</h2>
				<div class="report-lists emerging-trends-list">
					<div class="report-list">
						<h3>{{ 'Technologies'|t }}</h3>
						<ul>
							{% for technology in report.emerging_trends.technologies %}
								<li>{{ technology }}</li>
							{% endfor %}
						</ul>
					</div>
					<div class="report-list">
						<h3>{{ 'Methodologies'|t }}</h3>
						<ul>
							{% for methodology in report.emerging_trends.methodologies %}
								<li>{{ methodology }}</li>
							{% endfor %}
						</ul>
					</div>
				</div>
				<div class="report-column">
					<h3>{{ 'Timeline'|t }}</h3>
					<p>{{ report.emerging_trends.impact_timeline }}</p>
				</div>
			</section>
		{% endif %}

		{% if report.strategic_recommendations %}
			<section class="report-section recommendations">
				<h2>{{ 'Strategic Recommendations'|t }}</h2>
				<div class="report-lists strategic-recommendations-list">
					<div class="report-list">
						<h3>{{ 'Immediate Actions'|t }}</h3>
						<ul>
							{% for action in report.strategic_recommendations.immediate_actions %}
								<li>{{ action }}</li>
							{% endfor %}
						</ul>
					</div>
				</div>
				<div class="report-columns">
					<div class="report-column">
						<h3>{{ '6-Month Focus'|t }}</h3>
						<p>{{ report.strategic_recommendations.six_month_focus }}</p>
					</div>
					<div class="report-column">
						<h3>{{ 'Long-Term Positioning'|t }}</h3>
						<p>{{ report.strategic_recommendations.long_term_positioning }}</p>
					</div>
				</div>
			</section>
		{% endif %}

	{% endif %}

	<div class="report-actions">
		<a href="/dashboard" class="button button--return">{{ 'Home'|t }}</a>
		<a href="/analysis/role-impact" class="button button--next">{{ 'Evolution of Your Role'|t }}</a>
	</div>

</div>
