{#
/**
 * @file
 * Template for Paddle checkout confirmation page (Screen 2).
 *
 * Available variables:
 * - client_token: Paddle client-side token
 * - product_id: Paddle product ID
 * - environment: Paddle environment (sandbox or production)
 * - success_url: URL to redirect after successful payment
 * - cancel_url: URL to redirect if payment is cancelled
 * - terms_url: URL to Terms of Service page
 * - privacy_url: URL to Privacy Policy page
 */
#}
<div class="paddle-checkout-confirm">
  <div class="confirm-header">
    <h1>{{ 'Confirm Your Purchase'|t }}</h1>
    <p>{{ 'Please review and accept the following before completing payment.'|t }}</p>
  </div>

  <div class="acknowledgments">
    <div class="acknowledgment-item">
      <input type="checkbox" id="terms-checkbox" class="acknowledgment-checkbox" required>
      <label for="terms-checkbox">
        {{ 'I agree to the'|t }} <a href="{{ terms_url }}" target="_blank">{{ 'Terms of Service'|t }}</a>
      </label>
    </div>

    <div class="acknowledgment-item">
      <input type="checkbox" id="privacy-checkbox" class="acknowledgment-checkbox" required>
      <label for="privacy-checkbox">
        {{ 'I agree to the'|t }} <a href="{{ privacy_url }}" target="_blank">{{ 'Privacy Policy'|t }}</a>
      </label>
    </div>

    <div class="acknowledgment-item">
      <input type="checkbox" id="ai-checkbox" class="acknowledgment-checkbox" required>
      <label for="ai-checkbox">
        <strong>{{ 'AI Service Acknowledgment'|t }}:</strong><br>
        {{ 'I understand and agree that:'|t }}
        <ul>
          <li>All responses are generated by artificial intelligence (specific AI service provider and model may vary)</li>
          <li>No human expert reviews, validates, or verifies the AI's responses</li>
          <li>The AI may make mistakes, provide inaccurate information, or make incorrect predictions</li>
          <li>Responses are speculative insights about possible futures, not guaranteed predictions</li>
          <li>This is NOT professional career counseling, employment advice, or expert guidance</li>
        </ul>
      </label>
    </div>
  </div>

  <div class="checkout-button-container">
    <button id="paddle-checkout-button" class="paddle-checkout-btn" disabled aria-disabled="true">
      {{ 'Complete Purchase'|t }}
    </button>
  </div>

  <div class="checkout-navigation">
    <a href="/sign-up" class="btn-back">{{ '‚Üê Back to Overview'|t }}</a>
  </div>

  <div class="checkout-security">
    <p>{{ 'Secure payment powered by Paddle.com'|t }}</p>
  </div>
</div>

<script src="https://cdn.paddle.com/paddle/v2/paddle.js"></script>
<script>
  window.addEventListener('load', function() {
    // Checkbox validation - enable button when all checked
    const checkoutButton = document.getElementById('paddle-checkout-button');
    const checkboxes = document.querySelectorAll('.acknowledgment-checkbox');

    function updateButtonState() {
      const allChecked = Array.from(checkboxes).every(cb => cb.checked);
      checkoutButton.disabled = !allChecked;
      checkoutButton.setAttribute('aria-disabled', !allChecked);
      checkoutButton.style.opacity = allChecked ? '1' : '0.6';
      checkoutButton.style.cursor = allChecked ? 'pointer' : 'not-allowed';
    }

    checkboxes.forEach(checkbox => {
      checkbox.addEventListener('change', updateButtonState);
    });

    // Set environment first if sandbox
    {% if environment == 'sandbox' %}
    Paddle.Environment.set('sandbox');
    {% endif %}

    // Initialize Paddle
    Paddle.Initialize({
      token: '{{ client_token }}',
      eventCallback: function(data) {
        console.log('Paddle event:', data.name, data);

        if (data.name === 'checkout.error') {
          console.error('Paddle checkout error:', data.error || data.detail || data);
          alert('Paddle Error: ' + (data.error?.detail || data.detail || 'Unknown error. Check console for details.'));
        }

        if (data.name === 'checkout.completed') {
          window.location.href = '{{ success_url }}';
        } else if (data.name === 'checkout.closed') {
          window.location.href = '{{ cancel_url }}';
        }
      }
    });

    // Open checkout when button is clicked (only if enabled)
    checkoutButton.addEventListener('click', function() {
      if (!checkoutButton.disabled) {
        console.log('Opening checkout with price:', '{{ product_id }}');
        Paddle.Checkout.open({
          items: [
            {
              priceId: '{{ product_id }}',
              quantity: 1
            }
          ],
          settings: {
            successUrl: '{{ success_url }}',
            theme: 'light'
          }
        });
      }
    });
  });
</script>

<style>
  .paddle-checkout-confirm {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
  }

  .confirm-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .confirm-header h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .acknowledgments {
    background: #f5f5f5;
    padding: 2rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .acknowledgment-item {
    padding: 1rem 0;
    border-bottom: 1px solid #ddd;
  }

  .acknowledgment-item:last-child {
    border-bottom: none;
  }

  .acknowledgment-item label {
    display: inline;
    cursor: pointer;
  }

  .acknowledgment-checkbox {
    margin-right: 0.5rem;
    cursor: pointer;
  }

  .checkout-button-container {
    text-align: center;
    margin: 2rem 0;
  }

  .paddle-checkout-btn {
    background: #007bff;
    color: white;
    border: none;
    padding: 1rem 3rem;
    font-size: 1.25rem;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s, opacity 0.3s;
  }

  .paddle-checkout-btn:hover:not(:disabled) {
    background: #0056b3;
  }

  .paddle-checkout-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .checkout-navigation {
    text-align: center;
    margin: 1rem 0;
  }

  .btn-back {
    color: #007bff;
    text-decoration: none;
  }

  .btn-back:hover {
    text-decoration: underline;
  }

  .checkout-security {
    text-align: center;
    color: #666;
    font-size: 0.9rem;
    margin-top: 1rem;
  }
</style>
