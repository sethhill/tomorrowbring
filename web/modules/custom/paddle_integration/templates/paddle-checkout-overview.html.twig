{#
/**
 * @file
 * Template for Paddle checkout overview page (Screen 1).
 *
 * Available variables:
 * - confirm_url: URL to the confirmation page (Screen 2)
 */
#}
<div class="paddle-checkout-container">
  <div class="checkout-header">
    <h1>{{ 'Get Started with AI Career Impact Analysis'|t }}</h1>
    <p>{{ 'Unlock access to 30 comprehensive assessment modules and 8 personalized AI-generated reports.'|t }}</p>
  </div>

  <div class="checkout-benefits">
    <h2>{{ 'What You\'ll Get:'|t }}</h2>
    <ul>
      <li>{{ '30 comprehensive assessment modules'|t }}</li>
      <li>{{ '8 personalized AI-generated career reports'|t }}</li>
      <li>{{ 'Role impact analysis'|t }}</li>
      <li>{{ 'Career transition opportunities'|t }}</li>
      <li>{{ 'Task automation recommendations'|t }}</li>
      <li>{{ 'Industry insights and trends'|t }}</li>
      <li>{{ 'Skills gap analysis'|t }}</li>
      <li>{{ 'Personalized learning resources'|t }}</li>
    </ul>
  </div>

  <div class="checkout-button-container">
    <a href="{{ confirm_url }}" class="paddle-checkout-btn">
      {{ 'Continue to Purchase'|t }}
    </a>
  </div>

  <div class="checkout-security">
    <p>{{ 'Secure payment powered by Paddle.com'|t }}</p>
  </div>
</div>
