<?php

/**
 * @file
 * Contains paddle_integration.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function paddle_integration_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.paddle_integration':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Integrates Paddle.com payment processing for self-service user registration.') . '</p>';
      $output .= '<h3>' . t('Usage') . '</h3>';
      $output .= '<p>' . t('Configure Paddle credentials at <a href=":config">Paddle Integration Settings</a>.', [
        ':config' => '/admin/config/paddle-integration/settings',
      ]) . '</p>';
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function paddle_integration_theme($existing, $type, $theme, $path) {
  return [
    'paddle_checkout' => [
      'variables' => [
        'client_token' => NULL,
        'product_id' => NULL,
        'environment' => NULL,
        'success_url' => NULL,
        'cancel_url' => NULL,
      ],
    ],
    'paddle_success' => [
      'variables' => [
        'message' => NULL,
      ],
    ],
    'paddle_cancel' => [
      'variables' => [
        'message' => NULL,
        'checkout_url' => NULL,
      ],
    ],
  ];
}

/**
 * Implements hook_mail().
 */
function paddle_integration_mail($key, &$message, $params) {
  switch ($key) {
    case 'registration':
      $site_name = \Drupal::config('system.site')->get('name');
      $message['subject'] = t('Complete Your @site Registration', ['@site' => $site_name]);
      $message['body'][] = t('Hi there,');
      $message['body'][] = '';
      $message['body'][] = t('Thank you for your purchase! Your payment has been processed successfully.');
      $message['body'][] = '';
      $message['body'][] = t('To access your AI-powered career impact analysis, please complete your account setup:');
      $message['body'][] = '';
      $message['body'][] = $params['registration_url'];
      $message['body'][] = '';
      $message['body'][] = t('This link will expire in 7 days.');
      $message['body'][] = '';
      $message['body'][] = t('What you\'ll get access to:');
      $message['body'][] = t('- 30 comprehensive assessment modules');
      $message['body'][] = t('- 8 personalized AI-generated reports');
      $message['body'][] = t('- Personal dashboard to track progress');
      $message['body'][] = '';
      $message['body'][] = t('Questions? Reply to this email or contact support.');
      $message['body'][] = '';
      $message['body'][] = t('Best regards,');
      $message['body'][] = t('@site Team', ['@site' => $site_name]);
      break;
  }
}
