    case 'help.page.paddle_integration':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Integrates Paddle.com payment processing for self-service user registration.') . '</p>';
      $output .= '<h3>' . t('Usage') . '</h3>';
      $output .= '<p>' . t('Configure Paddle credentials at <a href=":config">Paddle Integration Settings</a>.', [
        ':config' => '/admin/config/paddle-integration/settings',
      ]) . '</p>';
      return $output;
  }
}

