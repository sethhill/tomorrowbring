/.ddev/import.yaml
/.ddev/commands/
/.ddev/addon-metadata/
/.ddev/docker-compose.*.yaml

# Ignore node modules
/node_modules/

# Ignore backup and temporary files
*.bak
*.swp
*.tmp
*~

